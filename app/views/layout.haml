!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "description", :content => "Ruby screencasts, com muitos tutoriais, projetos da comunidade e novas idéias."}
    %meta{ :name => "keywords", :content => "ruby, rails, ruby on rails, screencasts, rubycast, rubycasts, dicas, truques, tutoriais, treinamento, treinamentos, podcasts, programação"}
    %title RubyCasts
    %link{:href => '/stylesheets/reset.css', :rel => 'stylesheet', :media => "screen"}
    %link{:href => '/stylesheets/application.css', :rel => 'stylesheet', :media => "screen"}
    %link{:href => '/stylesheets/player_html_five.css', :rel => 'stylesheet'}
    %link{:href => '/stylesheets/coderay.css', :rel => 'stylesheet'}
  %body
    #page
      #containers
        #container
          #header
            #rubycasts-logo
              %a{:id => "logo", :href => '/'} RubyCasts
            %nav
              = partial :menu
          #content
            = yield
      #footer
        %div.inner
          %p
            ="Copyright ©#{Date.today.year} Rubycasts, an"
            %a{:href=> "http://github.com/tomas-stefano/rubycasts"} Opensource Project


          %script{:src => '/javascripts/player_html_five.js', :type => 'text/javascript'}
          %script{:src => '/javascripts/application.js', :type => 'text/javascript'}
          :javascript
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-23517315-1']);
            _gaq.push(['_trackPageview']);

            (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

          :javascript
            var uservoiceOptions = {
            key: 'uservoice',
            host: 'rubycasts.uservoice.com',
            forum: '1',
            alignment: 'left',
            background_color:'#f00',
            text_color: 'white',
            hover_color: '#06c',
            lang: 'en',
            showTab: true
            };
            function _loadUserVoice() {
              var s = document.createElement('script');
              s.src = ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js";
              document.getElementsByTagName('head')[0].appendChild(s);
            }
            _loadSuper = window.onload;
            window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
